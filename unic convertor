/* 1km = 0.62 mile
1 inch = 0.083 foot
1cm = 0.39 inch
1 pound = 0.454 kg
1 inch = 0.02 meter*/

#include <stdio.h>

int unitconvertor()

{
    int num;
    printf("chose a option,\n 1)km to mile\n 2)inch to foot \n3) cm to inch \n4)pound to kg \n5)inch to meter:   ");
    scanf("%d", &num);
    float num1;
    printf("enter number");
    scanf("%f", &num1);

    if (num == 1)
    {
        printf("%f km equal to %f miles", num1, num1 * 62 / 100);
    }

    else if (num == 2)
    {
        printf("%f inch equal to %f foot", num1, num1 * 83 / 1000);
    }
    else if (num == 3)
    {
        printf("%f cm equal to %f inch", num1, num1 * 39 / 100);
    }
    else if (num == 4)
    {
        printf("%f pound equal to %f kg", num1 * 454 / 1000);
    }
    else if (num == 5)
    {
        printf("%f inch equal to %f meter", num1, num1 * 2 / 100);
    }
    int check;
    printf("\nwant to calculate it again?\n 1 for yes\n 2 for no\n");
    scanf("%d", &check);
    if (check == 1)
    {
        unitconvertor();
    }
    else
        printf("thanks for using it");
}

int main()
{

    unitconvertor();
    return 0;
}
